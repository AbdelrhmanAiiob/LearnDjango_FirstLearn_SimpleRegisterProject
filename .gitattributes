# Force Python only
# ==============================

*.py linguist-language=Python

# ==============================
# Exclude everything else from stats
# ==============================
*.html linguist-detectable=false
*.css linguist-detectable=false
*.js linguist-detectable=false
*.md linguist-detectable=false
*.json linguist-detectable=false
*.txt linguist-detectable=false
*.sh linguist-detectable=false
*.lock linguist-detectable=false
*.ini linguist-detectable=false
*.cfg linguist-detectable=false
*.xml linguist-detectable=false
*.yml linguist-detectable=false
*.yaml linguist-detectable=false

# Java files (exclude them completely)
*.java linguist-detectable=false

# Common build / dependency / virtualenv folders
node_modules/** linguist-detectable=false
build/** linguist-detectable=false
dist/** linguist-detectable=false
static/** linguist-detectable=false
assets/** linguist-detectable=false
venv/** linguist-detectable=false
.env/** linguist-detectable=false

# Django migrations (auto-generated, ignore from stats)
*/migrations/*.py linguist-detectable=false
